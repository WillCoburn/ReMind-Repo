rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User doc and entries subcollection
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      match /entries/{entryId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // ðŸ”¹ Top-level communityPosts collection
    match /communityPosts/{postId} {
      allow read: if true;   // for now, anyone can read
      
            // Allow signed-in users to increment likes or reports. All other
      // mutations (creating posts, editing text, hiding, etc.) must go
      // through Cloud Functions which run with admin privileges.
      allow update: if request.auth != null && (
        isAllowedIncrement("likeCount") ||
        isAllowedIncrement("reportCount")
      );

      allow create, delete: if false; // only Cloud Functions write

      function isAllowedIncrement(field) {
        return request.resource.data.diff(resource.data).affectedKeys().hasOnly([field]) &&
          request.resource.data[field] == resource.data[field] + 1;
      }
    }
  }
}
